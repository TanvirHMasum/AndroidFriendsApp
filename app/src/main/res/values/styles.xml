<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CardImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:src">@drawable/ic_round_person</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CardTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_400sdp</item>
        <item name="android:layout_margin">@dimen/_2sdp</item>
        <item name="android:src">@drawable/ic_round_person</item>
    </style>

    <style name="TableLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:horizontalSpacing">@dimen/_2sdp</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="TableViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:layout_marginBottom">@dimen/_3sdp</item>
        <item name="android:weightSum">4</item>
    </style>

    <style name="HeaderTVStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>

    <style name="ContentTVStyleBold">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/font_size_16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ContentTVStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/font_size_14sp</item>
    </style>
</resources>